#!/usr/bin/env bash
set -e

echo "Installing prerequisites for packer..."
sudo pacman -S base-devel fakeroot jshon expac

echo "Installing packer..."
mkdir /tmp/tmp-packer
cd /tmp/tmp-packer
wget https://aur.archlinux.org/packages/pa/packer/PKGBUILD
makepkg
sudo pacman --noconfirm -U *.tar.xz
cd -

echo "Installing base packages..."
packer --noconfirm --noedit -S \
  vim \
  gcc \
  make \
  rxvt-unicode \
  bash-completion

echo "Installing window manager dependencies..."
packer --noconfirm --noedit -S \
  xcb-util-keysyms \
  xcb-util-wm \
  xcb-util-cursor \
  yajl \
  startup-notification \
  libev

echo "Installing tools..."
packer --noconfirm --noedit -S \
  i3lock \
  i3blocks-git \
  gsimplecal \
  scrot \
  feh \
  acpi \
  xdotool \
  pulseaudio-ctl \
  network-manager-applet \
  imagemagick \
  dunst \
  python \
  python-pip \
  python2-pip \
  compton-git \
  ttf-font-icons \
  bdf-tewi-git \
  thunar \
  tumbler \
  eog \
  numix-themes \
  numix-icon-theme-git \
  tk \
  aspell-en \
  evince \
  dmenu2 \
  libmtp \
  gvfs-mtp \
  vim-airline

echo "Installing some python stuff..."
packer --noconfirm --noedit -S \
  python-pillow \
  python-urllib3

echo "Installing some perl stuff..."
packer --noconfirm --noedit -S \
  perl-anyevent-i3 \
  perl-json-xs \
