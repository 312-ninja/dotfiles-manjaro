#!/usr/bin/env bash
set -e

echo "Installing packer..."
mkdir /tmp/tmp-packer
cd /tmp/tmp-packer
wget https://aur.archlinux.org/packages/pa/packer/PKGBUILD
makepkg
sudo pacman --noconfirm -U *.tar.gz
cd -

echo "Installing base packages..."
packer --noconfirm --noedit -S \
  base-devel \
  vim \
  gcc \
  make \
  rxvt-unicode \
  bash-completion

echo "Installing window manager dependencies..."
packer --noconfirm --noedit -S \
  xcb-util-keysyms \
  xcb-util-wm \
  xcb-util-cursor \
  yajl \
  startup-notification \
  libev

echo "Installing tools..."
packer --noconfirm --noedit -S \
  i3lock \
  i3blocks-git \
  gsimplecal \
  scrot \
  feh \
  acpi \
  xdotool \
  pulseaudio-ctl \
  network-manager-applet \
  imagemagick \
  dunst \
  python3 \
  python-pip \
  compton-git \
  ttf-font-icons \
  bdf-tewi-git \
  thunar \
  numix-themes \
  numix-icon-theme-git \
  tk \
  evince \
  dmenu2 \
  libmtp \
  gvfs-mtp
